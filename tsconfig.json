{
  "compilerOptions": {
    "target": "ES6",
    "module": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./node_modules/.cache/tsconfig.tsbuildinfo"
  },
  "tsconfigRootDir": "__dirname",
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
